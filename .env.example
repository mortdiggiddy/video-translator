# Service Configuration
SERVICE_NAME=video-translator
PORT=3001
NODE_ENV=development

# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Temporal Configuration
TEMPORAL_VERSION=1.25.1
TEMPORAL_ADMINTOOLS_VERSION=1.25.1-tctl-1.18.1-cli-1.1.0
TEMPORAL_UI_VERSION=2.26.2
TEMPORAL_SERVER_ADDRESS=temporal:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_CORS_ORIGINS=http://localhost:3000
DYNAMIC_CONFIG_FILE_PATH=config/dynamicconfig/development-sql.yaml

# Temporal Database (PostgreSQL)
DB=postgres12
DB_TYPE=postgres
DB_PORT=5432
DB_EXTERNAL_PORT=5437
POSTGRES_USER=temporaluser
POSTGRES_PASSWORD=temporalpass
POSTGRES_PWD=temporalpass
POSTGRES_DB=temporal
POSTGRES_SEEDS=temporal-db
POSTGRESQL_VERSION=16

# SQL Connection Settings
SQL_MAX_CONNS=20
SQL_MAX_IDLE_CONNS=10
SQL_MAX_CONN_TIME=1h

# Elasticsearch (disabled for video-translator)
ENABLE_ES=false
